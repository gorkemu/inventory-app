extends layout

block content
  h1 #{title}: #{product.name}

  p #[strong Do you really want to delete this product?]

  div(style='margin-left:20px;margin-top:20px')

  p #[strong Category: ]
    a(href=product.category.url) #{product.category.name}
  p #[strong Description: ] #{product.description}
  
  form(method='POST' action='')
    div.form-group
    input#productid.form-control(type='hidden',name='productid', required='true', value=product._id )

    button.btn.btn-primary(type='submit') Delete